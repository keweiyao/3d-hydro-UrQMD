# Run trento
cd trento
seed=$(($1+1230))
echo $seed
./trento -c trento-config.txt --random-seed $seed
cd ..
mv -v ./trento/ic.hdf5 ./vhlle/ 

# Run hydro
cd vhlle
./vhlle vhlle-config.txt
cd ..
mv -v ./vhlle/vhlle_result_dir/freezeout.dat ./escape

# Run afterburner
cd escape
./escape events $1 escape-config.txt > afterburner$1.dat
cd ..

# Run stat
cd collector
cp ../escape/afterburner$1.dat ./plist.dat
./collector stat-config.txt
mkdir data-folder
cp data.hdf5 data-folder
python calc_obs.py
cd ..

mv collector/data.hdf5 ./plist$1.hdf5
mv collector/Obs.hdf5 ./Obs$1.hdf5
